                            <input type="button" value="Редагувати" onclick="showEditForm('<%= restaurants[i].Name %>', '<%= restaurants[i].Description %>', '<%= restaurants[i].Image %>', '<%= restaurants[i].Prioritet %>', '<%= restaurants[i].login %>', '<%= restaurants[i].password %>')">
                        </div>
                    </div>

                </div>

            <% } %>

        </div>

    </div>
</section>

