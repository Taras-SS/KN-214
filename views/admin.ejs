<div class="container-contact100" id="addRestaurant">
    <div class="contact100-map" id="" data-map-x="40.722047" data-map-y="-73.986422" data-pin="images/icons/map-marker.png" data-scrollwhell="0" data-draggable="1"></div>


    <div class="wrap-contact100">

        <form class="contact100-form validate-form">
				<span class="contact100-form-title">
                    Новий ресторан
				</span>

            <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="Логін">
                <span class="label-input100">Логін</span>
                <input class="input100" type="text" id="login" name="name" placeholder="Введіть логін">
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate = "Пароль">
                <span class="label-input100">Пароль</span>
                <input class="input100" type="password" name="price" id="password" placeholder="Введіть пароль">
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 rs1-wrap-input100 rs1-wrap-input100-100 validate-input" data-validate="Назва ресторану">
                <span class="label-input100">Назва ресторану</span>
                <input class="input100" type="text" id="restName" name="name" placeholder="Введіть назву ресторану">
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input" data-validate = "Опис">
                <span class="label-input100">Опис</span>
                <textarea class="input100" name="message" id="restDescription" placeholder="Короткий опис ресторану..."></textarea>
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 rs1-wrap-input100 validate-input rs1-wrap-input100-100" data-validate = "Пріорітет">
                <span class="label-input100">Пріорітет для ресторану</span>
                <input class="input100" type="number" name="prioritet" id="restPrioritet" oninput="checkPrioritet(this)" placeholder="Введіть пріорітет ресторану (від 1 до 10)">
                <span class="focus-input100"></span>
            </div>

            <div id="uploadImageForm">
                <form>
                    <input type="file" id="addPhotoInput">
                    <p>Загрузіть логотип ресторану</p>
                    <button type="button">Вибрати</button>
                </form>
            </div>

            <div class="container-contact100-form-btn">
                <button class="contact100-form-btn" type="button">
						<span>
							Зберегти
							<i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
						</span>
                </button>
            </div>

        </form>
    </div>
</div>

<section class="simon-section center none-display" id="restaurantsRemove" style="min-height: 66vh">
    <div class="container">
        <div class="row">
            <% for(let i=0; i<restaurants.length; i++){ %>
                <div class="col-md-6 no-gutter-mobile" id="removePosition<%= i %>">
                    <div class="dining-info">
                        <img src="<%= restaurants[i].Image %>" onclick="window.location.href = '/dishesPage?Login=<%= restaurants[i].login %>'" alt="<%= restaurants[i].Name %>" class="img-full dining-info-img" data-yo-delaytype="lazy" data-yo-src="<%= restaurants[i].Image %>" data-yo-loaded="true">

                        <h2 class="simon-section-header header-md center" onclick="window.location.href = '/dishesPage?Login=<%= restaurants[i].login %>'"><%= restaurants[i].Name %></h2>
                        <div class="removbeBtnDiv">
                            <input type="button" value="Видалити" onclick="removeRestaurant('<%= restaurants[i].login %>', 'removePosition<%= i %>')">
                        </div>
                    </div>

                </div>

            <% } %>

        </div>

    </div>
</section>

<section class="simon-section center none-display" id="restaurantsEdit" style="min-height: 66vh">
    <div class="container">
        <div class="row">
            <% for(let i=0; i<restaurants.length; i++){ %>
                <div class="col-md-6 no-gutter-mobile" id="removePosition<%= i %>">
                    <div class="dining-info">
                        <img src="<%= restaurants[i].Image %>" onclick="window.location.href = '/dishesPage?Login=<%= restaurants[i].login %>'" alt="<%= restaurants[i].Name %>" class="img-full dining-info-img" data-yo-delaytype="lazy" data-yo-src="<%= restaurants[i].Image %>" data-yo-loaded="true">

                        <h2 class="simon-section-header header-md center" onclick="window.location.href = '/dishesPage?Login=<%= restaurants[i].login %>'"><%= restaurants[i].Name %></h2>
