<body>
<header class="header">
    <a href="/main" class="logo"><img src="/images/logo.png"></a>
    <div class="header-right">
        <a>
            <% if(login == 1){ %>
                <input type="button" value="Аккаунт" onclick="window.location.href = '/userPage'">
            <% }else{ %>
                <input type="button" value="Вхід" id="showLoginForm">
            <% } %>
        </a>
    </div>
</header>

<section class="simon-section center" style="min-height: 66vh">
    <div class="container">
        <div class="row">
            <% for(let i=0; i<restaurants.length; i++){ %>
                <div class="col-md-6 no-gutter-mobile">
                    <div class="dining-info">
                        <img src="<%= restaurants[i].Image %>" onclick="window.location.href = '/dishesPage?Login=<%= restaurants[i].login %>&Type=main'" alt="<%= restaurants[i].Name %>" class="img-full dining-info-img" data-yo-delaytype="lazy" data-yo-src="<%= restaurants[i].Image %>" data-yo-loaded="true">

                        <h2 class="simon-section-header header-md center" onclick="window.location.href = '/dishesPage?Login=<%= restaurants[i].login %>&Type=main'"><%= restaurants[i].Name %></h2>
                        <% if(restaurants[i].hasOwnProperty(`WorkdaysFrom`)){ %>
                            <div class="timetable">
                                Пн-Пт: <%= restaurants[i].WorkdaysFrom %> - <%= restaurants[i].WorkdaysTo %> </br>
                                Сб-Нд: <%= restaurants[i].DaysOffFrom %> - <%= restaurants[i].DaysOffTo %>
                            </div>
                        <% } %>
                        <p class="dining-info-desc"><%= restaurants[i].Description %></p>
                    </div>

                </div>

            <% } %>

        </div>

    </div>
</section>


